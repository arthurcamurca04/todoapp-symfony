{% extends "base.html.twig" %}

{% block body %}
<main>
    <h1>To Do List</h1>
    <div class="container-todos">
        <ol class="todos">
            {% if todos is empty %}
                <p style="text-align: center; margin-top: 44px;">There is nothing to do! :(</p>
            {% endif %}
            {% for todo in todos %}
                <li class="todo">
                    <span>
                        <form style="display: inline-block;" action="" method="POST">
                            <input style="cursor: pointer;" type="checkbox" {% if todo.isDone %} checked {% endif %}>
                        </form> 
                        {{ todo.description }}
                    </span>
                    <span>
                        <a href={{path('todo_edit_page', {id: todo.id})}} class="btn-edit">
                            <i class="fas fa-pen-to-square"></i>
                        </a>

                        <a class="btn btn-trash" href={{path('todo_remove_page', {id: todo.id})}}>
                           <i class="fas fa-trash"></i>
                        </a>
                    </span>
                </li>
            {% endfor %}
        </ol>
    </div>
</main>
{% endblock %}